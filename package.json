{
  "name": "confluence-node",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dev/index.js",
    "mcp": "npm run -s build && node dist/mcp-server.js",
    "mcp:http": "npm run -s build && node dist/mcp-server.js --http",
    "mcp:http:port": "npm run -s build && node dist/mcp-server.js --port=3000",
    "test": "node dev/test-connection.js"
  },
  "bin": {
    "confluence-mcp": "./dist/mcp-server.js"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.1",
    "axios": "^1.6.0",
    "dotenv": "^16.4.0",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
